{
  "$schema": "https://railway.app/railway.schema.json",
  "deploy": {
    "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT --workers 2 --timeout 120 --max-requests 1000 --max-requests-jitter 100 --preload",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300
  },
  "build": {
    "builder": "NIXPACKS"
  },
  "variables": {
    "GEMINI_API_KEY": "${{GEMINI_API_KEY}}",
    "FLASK_ENV": "production",
    "PYTHONUNBUFFERED": "1"
  }
}